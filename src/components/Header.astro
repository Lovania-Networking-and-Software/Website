---
import {SITE_TITLE} from '../consts';
---

<div class="header-wrapper">
    <header class="header">
        <div class="logo">
            <a href="/">
                <img src="/lovania2.webp" alt="Logo"/>
            </a>
        </div>
        <tabs>
            <nav class="navigation">
                <tab><a href="#">About</a></tab>
                <tab><a href="#">Community</a></tab>
                <tab><a href="#">Blog</a></tab>
                <tab><a href="#">Why Lovania</a></tab>
            </nav>
        </tabs>
        <a class="github-link" href="https://github.com/Lovania-Networking-and-Software">GitHub</a>
    </header>
</div>

<script>
    const currentPath = window.location.pathname;
    const links = Array.from(document.querySelectorAll('.navigation tab > a'));
    links.forEach(link => {
        if (link.getAttribute('href') === currentPath) {
            link.classList.add('active');
        }
    });
</script>

<style>
    .header-wrapper {
        contain: layout;
        pointer-events: none;
        position: fixed;
        top: 0;
        width: 100%;
        display: block;
        z-index: 1006;
        box-shadow: 0 1px 2px 0 rgba(60, 64, 67, .3),0 2px 6px 2px rgba(60, 64, 67, .15);
    }

    .header {
        -webkit-box-align: center;
        -webkit-align-items: center;
        -moz-box-align: center;
        -ms-flex-align: center;
        align-items: center;
        background: #ffffff;
        display: flex;
        gap: 16px;
        height: 48px;
        padding: 0 16px 0 24px;
        position: relative;
        transform: translateZ(0);
        font: 500 14px/36px Poppins, Orbit, sans-serif;
        pointer-events: all;
    }

    .logo {
        padding-right: 0;
        flex: 0 0 auto;
        height: 36px;
        margin: 6px 0;
        box-sizing: inherit;
    }

    .logo img {
        height: 32px;
    }

    tabs {
        display: -webkit-box;
        display: -webkit-flex;
        display: -moz-box;
        display: -ms-flexbox;
        display: flex;
        -webkit-box-flex: 1;
        -webkit-flex: 1;
        -moz-box-flex: 1;
        -ms-flex: 1;
        flex: 1;
        height: 48px;
        max-width: calc(100% - 208px);
        position: relative;
    }

    .navigation {
        display: flex;
        margin: 0 0 0 32px;
        padding: 0;
        bottom: 0;
        display: -webkit-box;
        display: -webkit-flex;
        display: -moz-box;
        display: -ms-flexbox;
        display: flex;
        left: 0;
        overflow: hidden;
        position: absolute;
        right: 0;
        top: 0;
        box-sizing: inherit;
    }

    .navigation tab {
        display: -webkit-box;
        display: -webkit-flex;
        display: -moz-box;
        display: -ms-flexbox;
        display: flex;
        -webkit-flex-shrink: 0;
        -ms-flex-negative: 0;
        flex-shrink: 0;
        position: relative;
    }

    .navigation tab > a {
        color: #000;
        text-decoration: none;
        -webkit-box-align: center;
        -webkit-align-items: center;
        -moz-box-align: center;
        -ms-flex-align: center;
        align-items: center;
        display: -webkit-box;
        display: -webkit-flex;
        display: -moz-box;
        display: -ms-flexbox;
        display: flex;
        font: 500 14px/20px Poppins, Orbit, sans-serif;
        letter-spacing: normal;
        margin: 0;
        padding: 0 18px;
        text-transform: none;
        -webkit-transition: color .2s;
        transition: color .2s;
        white-space: nowrap;
        box-sizing: inherit;
    }

    tabs > .navigation tab > a:hover {
        color: #0f3054;
    }

    tabs > .navigation tab > a:hover::after{
        border-color: #0f3054;
        left: 22px;
        right: 22px;
        border-radius: 3px 3px 0 0;
        border-top: 3px solid #0f3054;
        bottom: 0;
        content: "";
        display: block;
        position: absolute;
        box-sizing: inherit;
        color: #0f3054;
    }

    tabs > .navigation tab > a.active {
        color: #0f3054;
    }

    tabs > .navigation tab > a.active::after {
        border-color: #0f3054;
        left: 22px;
        right: 22px;
        border-radius: 3px 3px 0 0;
        border-top: 3px solid #0f3054;
        bottom: 0;
        content: "";
        display: block;
        position: absolute;
        box-sizing: inherit;
        color: #0f3054;
    }

    .github-link {
        margin: 0;
        position: relative;
        box-sizing: border-box;
        display: inline-block;
        max-width: none;
        outline: 0;
        overflow: hidden;
        text-align: center;
        min-width: 36px;
        height: 36px;
        line-height: 36px;
        padding: 0 8px;
        text-decoration: none;
        color: #b7d9cf;
        border-radius: 4px;
        transition: background .2s, box-shadow .2s, color .2s;
        text-overflow: ellipsis;
        width: auto;
        cursor: pointer;
        vertical-align: middle;
        margin-inline-start: auto;
    }

    .github-link:hover {
        background-color: #000;
    }

    @media (max-width: 767px) {
        /* Mobil cihazlar için stil ayarları */
        .header {
            padding: 8px;
        }

        .logo {
            padding-right: 8px;
        }

        .logo img {
            height: 24px;
        }

        .navigation {
            display: none;
        }

        .github-link {
            margin-right: 8px;
        }
    }
</style>

